<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <!-- <label for="email-login">Email:</label> -->
        <!-- Add autocomplete attribute for email -->
        <input class="form-input" placeholder="Email" type="text" id="email-login" autocomplete="email" />
      </div>
      <div class="form-group">
        <!-- <label for="password-login">Password:</label> -->
        <!-- Add autocomplete attribute for password -->
        <input class="form-input" placeholder="Password" type="password" id="password-login" autocomplete="current-password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <!-- <label for="name-signup">Name:</label> -->
        <!-- Add autocomplete attribute for name -->
        <input class="form-input" placeholder="Name" type="text" id="name-signup" autocomplete="name" />
      </div>
      <div class="form-group">
        <!-- <label for="email-signup">Email:</label> -->
        <!-- Add autocomplete attribute for email -->
        <input class="form-input" placeholder="Email" type="text" id="email-signup" autocomplete="email" />
      </div>
      <div class="form-group">
        <!-- <label for="password-signup">Password:</label> -->
        <!-- Add autocomplete attribute for password -->
        <input class="form-input" placeholder="Password" type="password" id="password-signup" autocomplete="new-password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="../js/login.js"></script>