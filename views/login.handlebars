<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <!-- Add autocomplete attribute for email -->
        <input class="form-input" type="text" id="email-login" autocomplete="email" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <!-- Add autocomplete attribute for password -->
        <input class="form-input" type="password" id="password-login" autocomplete="current-password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <!-- Add autocomplete attribute for name -->
        <input class="form-input" type="text" id="name-signup" autocomplete="name" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <!-- Add autocomplete attribute for email -->
        <input class="form-input" type="text" id="email-signup" autocomplete="email" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <!-- Add autocomplete attribute for password -->
        <input class="form-input" type="password" id="password-signup" autocomplete="new-password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="../js/login.js"></script>