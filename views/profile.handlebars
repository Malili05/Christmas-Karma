<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a Child:</h3>

    <form class="form new-child-form">
      <div class="form-group">
        <label for="child-name">Child's Name:</label>
        <input class="form-input" type="text" id="childName" name="childName" placeholder="First name, last initial" />
      </div>

      <div class="form-group">
        <label for="child-country">Country where they live:</label>
        <input class="form-input" type="text" id="childCountry" name="childCountry"
          placeholder="U.S., Canada, France, etc..." />
      </div>

      <div class="form-group">
        <label for="child-niceness">Naughty or Nice:</label>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="childNiceness" name="childNiceness" />
          <label class="form-check-label" for="childNiceness">Nice</label>
        </div>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if children.length}}
  <div class="col-md-6 child-list">
    <h3>Current Children:</h3>

    <!-- Wrap children in a flexbox with responsive styling -->
    <div class="child-flex-container">
      {{#each children as |child|}}
      <div class="child-item" style="color: {{#if child.childNiceness}}green{{else}}red{{/if}}">
        <h4>{{child.childName}}</h4>
        <button class="btn btn-sm btn-danger" data-id="{{child.id}}">DELETE</button>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>

<style>
  /* Add styles for the flexbox and child items */
  .child-flex-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;

  }

  .child-item {
    width: calc(31% - 10px);
    margin-bottom: 10px;
    box-sizing: border-box;
  }

  /* Responsive styles for smaller screens */
  @media only screen and (max-width: 768px) {
    .child-item {
      width: 48%;
      /* 2 columns on smaller screens */
    }
  }

  @media only screen and (max-width: 480px) {
    .child-item {
      width: 100%;
      /* 1 column on even smaller screens */
    }
  }
</style>