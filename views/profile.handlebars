<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a Child:</h3>

    <form class="form new-child-form">
      <div class="form-group">
        <label for="child-name">Child's Name:</label>
        <input class="form-input" type="text" id="childName" name="childName" placeholder="First name, last initial" />
      </div>

      <div class="form-group">
        <label for="child-country">Country where they live:</label>
        <input class="form-input" type="text" id="childCountry" name="childCountry"
          placeholder="U.S., Canada, France, etc..." />
      </div>

      <div class="form-group">
        <label for="child-niceness">Naughty or Nice:</label>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="childNiceness" name="childNiceness" />
          <label class="form-check-label" for="childNiceness">Nice</label>
        </div>
      </div>


      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if children.length}}
  <div class="col-md-6 child-list">
    <h3>Current Children:</h3>

    {{#each children as |child|}}
    <div class="row mb-2">

      <h4>{{child.childName}}</h4>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{child.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>